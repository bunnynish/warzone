<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
	<link rel="icon" type="image/png" href="~/Pictures/favicon-32x32.png">
	<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<header class="navbar-fixed-top">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
				<a href="~/home/index"><img src="~/Pictures/logo-png.png" /></a>
				<img class="btnShowHide burgerShowHide" alt="Logo Paintball" src="~/images/burgerIcon.png" />
			</div>
			<div class="col-lg-9 col-xl-9">
				<div class="row justify-content-center">
					<div class="col-xl-11">
						<div class="row">
							<div class="col-lg-2 col-xl-2">
								<button class="btnShowHide navButton" scrollSelector="aboutUs_84" style="border-color:yellow;">O NAMA</button>
							</div>
							<div class="col-lg-2 col-xl-2">
								<button class="btnShowHide navButton" scrollSelector="birthdays_85" style="border-color:aqua;">RODJENDANI</button>
							</div>
							<div class="col-lg-2 col-xl-2">
								<button class="btnShowHide navButton" scrollSelector="teamBuilding_84" style="border-color:chartreuse;">TEAM BUILDING</button>
							</div>
							<div class="col-lg-2 col-xl-2">
								<button class="btnShowHide navButton" scrollSelector="actions_84" style="border-color:deeppink;">AKCIJE</button>
							</div>
							<div class="col-lg-2 col-xl-2">
								<a href="~/gallery/index">
									<button class="btnShowHide navButton" style="border-color:cornflowerblue;">GALERIJA</button>
								</a>
							</div>
							<div class="col-lg-2 col-xl-2">
								<a href="#contactFooter">
									<button class="btnShowHide navButton" style="border-color:floralwhite;">KONTAKT</button>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>
	@RenderBody()
	<footer>
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-4 col-xs-12 socialFooter">
						<h2>PRATITE NAS:</h2><br /><br /><br />
						<a target="_blank" href="https://www.facebook.com/paintballclub.warzone/" class="fa fa-facebook" alt="find us on facebook" style="margin-right:20px;"></a>
						<a target="_blank" href="https://www.instagram.com/paintballnis/" class="fa fa-instagram" alt="follow us on instagram" style="margin-left:20px;"></a>
					</div>
					<div class="col-md-4 col-xs-12 mapFooter nopadding">
						<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3681.588288761552!2d21.860962821847036!3d43.3437605494696!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4755b70695e2102f%3A0x3252a5f82f1b34b6!2sWarzone+Paintball+Club!5e1!3m2!1ssr!2srs!4v1520511772607" align="left"  allowfullscreen></iframe>
					</div>
					<div class="col-md-4 col-xs-12 contactFooter" id="contactFooter">
						<h2>Kontaktirajte nas:</h2><br /><br />
						<span class="glyphicon glyphicon-phone-alt" style="display:inline; font-size: 25px;"></span><br />
						<p>+381 65 5090300</p><br /><br />
						<span class="glyphicon glyphicon-envelope" style="display:inline; font-size: 25px;"></span><br />
						<a href="mailto:paintball.warzone@yahoo.com">paintball.warzone@yahoo.com</a><br /><br />
						<span class="info1"><p style="display:inline; font-family:Trebuchet MS"> © Warzone design - <a style="font-family:Trebuchet MS; color:#808080" href="mailto:branimir.spasic@gmail.com">branimir.spasic@gmail.com</p></a></span>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<section class="underFooter">
		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-4 col-xl-4">
				<p class="info2" style="display:inline; font-family:Trebuchet MS"> © Warzone design - <a style="font-family:Trebuchet MS; color:#808080" href="mailto:branimir.spasic@gmail.com">branimir.spasic@gmail.com</p></a>
			</div>
		</div>
	</section>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>

<script>
	$(document).ready(function () {
		$(".btnShowHide").click(function () {
			$(".navButton").toggleClass("navButtonResponsive");
		});
	});

	$('.navButton').click(function () {



		var scrollSelector = $(this).attr('scrollSelector');
		if (scrollSelector != undefined) {
			var items = scrollSelector.split('_');
			var elementToScrol = '';
			var scrollSelector = items.length > 0 ? items[0] : '';
			var scrollHeight = 100;
			if (items.length > 1) {
				scrollHeight = parseInt(items[1]);
			}

			switch (scrollSelector) {
				case 'aboutUs':
				default:
					elementToScrol = 'menu2';
					break;
				case 'birthdays':
					elementToScrol = 'menu4';
					break;
				case 'teamBuilding':
					elementToScrol = 'menu5';
					break;
				case 'actions':
					elementToScrol = 'menu6';
					break;
			}

			$("html, body").animate({ scrollTop: $('.' + elementToScrol).offset().top - scrollHeight }, 1000);
		}
	})
</script>

